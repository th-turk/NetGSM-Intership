{% extends  "admin/index.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/employees/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css">

{% endblock %}
{% block adminContent %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="container col-lg-12">

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                        <!-- Form for new Category Begins -->
                        <div style="margin: 0 auto  7% auto ;float: none" class=" col-sm-6 col">

                                {{ include('admin/department/form.html.twig') }}

                        </div>

                        <div class="col-lg-12">

                            <table class="table table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th> Name</th>
                                    <th> Address</th>
                                    <th> Started Date</th>
                                    <th  class="text-center">Options</th>
                                </tr>
                                </thead>
                                <tbody>

                                <!-- Function to bring all categories into view -->
                                {% for department in departments  %}
                                    <tr>
                                        <td>{{ department.id }}</td>
                                        <td>{{ department.name }}</td>
                                        <td>{{ department.address }}</td>
                                        <td>{{ department.startDate| date}}</td>
                                        <td>
                                            <div class='btn-toolbar'>
                                                <a class='btn  btn-danger pull-left col-lg-6 ' href='{{ path('delete_departments',{"id":department.id}) }}'> Delete</a>
                                                <a class=' btn  btn-warning pull-right col-lg-5 ' href='{{ path('edit_department',{"id":department.id}) }}'>Edit </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}


                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->




{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js" charset="UTF-8"></script>
    <script src="{{ asset('js/admin/employee/main.js') }}"></script>
{% endblock %}