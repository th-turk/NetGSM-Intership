{% extends  "admin/index.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/employees/style.css') }}">
{% endblock %}

{% block adminContent %}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-success fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="container col-lg-12">

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <!-- Form for new Category Begins -->
                    <div style="margin: 0 auto  7% auto ;float: none" class=" col-sm-6 col">


                        {{ form_start(degreeForm) }}
                        <div class="form-group">
                            {{ form_row(degreeForm.name) }}
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary " type="submit">Add Degree</button>
                        </div>
                        {{ form_end(degreeForm) }}


                    </div>

                    <div class="col-lg-12">

                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th> Name</th>
                                <th  class="text-center">Options</th>
                            </tr>
                            </thead>
                            <tbody>

                            <!-- Function to bring all categories into view -->
                            {% for deg in degree  %}
                                <tr>
                                    <td>{{ deg.id }}</td>
                                    <td><p>{{ deg.name }}</p></td>
                                    <td>
                                        <div class='btn-toolbar'>
                                            <a class='btn  btn-danger pull-left col-lg-6 ' href='{{ path('delete_degree',{"id":deg.id}) }}'> Delete</a>
                                            <a class=' btn  btn-warning pull-right col-lg-5 ' href='{{ path('edit_degree',{"id":deg.id}) }}'>Edit </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}


                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->
{% endblock %}
